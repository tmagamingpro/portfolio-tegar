{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "admin-dashboard/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },

    {
      "src": "^/login$",
      "dest": "/admin-dashboard/dist/index.html"
    },
    {
      "src": "^/login/(.*)",
      "dest": "/admin-dashboard/dist/$1"
    },

    {
      "src": "^/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
